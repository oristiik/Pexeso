<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="23dp"
        android:onClick="click"
        android:src="@drawable/cr"
        android:layout_marginStart="10dp" />
    <ImageView android:layout_width="150dp" android:layout_height="100dp" android:id="@+id/imageView2"
        android:src="@drawable/cr"
        android:layout_alignTop="@+id/imageView" android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="click2"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="18dp"
        android:onClick="click3"
        android:src="@drawable/cr" />
    <ImageView android:layout_width="150dp" android:layout_height="100dp" android:id="@+id/imageView4"
        android:src="@drawable/cr"
        android:layout_alignTop="@+id/imageView3" android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        android:onClick="click4"/>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="22dp"
        android:onClick="click5"
        android:src="@drawable/cr" />
    <ImageView android:layout_width="150dp" android:layout_height="100dp" android:id="@+id/imageView6"
        android:src="@drawable/cr"
        android:layout_alignTop="@+id/imageView5" android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4"
        android:onClick="click6"/>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="390dp"
        android:onClick="btn"
        android:text="HrÃ¡t" />


</RelativeLayout>
